{
  "name": "tea-diary",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "vercel-build": "prisma generate && prisma db push && next build --webpack",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "~2.11",
    "@ducanh2912/next-pwa": "~10.2",
    "@google/generative-ai": "~0.24",
    "@prisma/client": "~5.22",
    "bcryptjs": "~3.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dexie": "^4.3.0",
    "dexie-react-hooks": "^4.2.0",
    "framer-motion": "^12.34.3",
    "lucide-react": "~0.479",
    "next": "~16.1",
    "next-auth": "~5.0.0-beta.30",
    "prisma": "~5.22",
    "react": "~18.3",
    "react-dom": "~18.3",
    "tailwind-merge": "^3.5.0",
    "zod": "~4.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/bcryptjs": "~3.0",
    "@types/node": "~22.13.4",
    "@types/react": "~18.3",
    "@types/react-dom": "~18.3",
    "eslint": "~9.20",
    "eslint-config-next": "~16.1",
    "husky": "~9.1",
    "lint-staged": "~16.2.7",
    "postcss": "~8.5",
    "prettier": "~3.5",
    "tailwindcss": "~4.2.0",
    "typescript": "~5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
